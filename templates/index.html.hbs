<body>

	<header class="bg-black py-4">
		<div class="container ml-auto mr-auto max-w-4xl text-white">
			<h1 class="text-4xl"><i>txtastic</i></h1>
		</div>
	</header>

	<div class="container ml-auto mr-auto max-w-4xl mt-10">
		<div class="bg-white rounded shadow p-5">
			<form action="/api/txt" method="POST" enctype="text/plain">
				<textarea name="txt" required enctype="text/plain" id="txt-content"
					class="mt-1 w-full px-3 py-2 text-gray-700 border rounded focus:outline-none"
					style="min-height: 400px;" placeholder="Type some text here!"></textarea>
				<button id="txt-button" class="mt-3 bg-black text-white py-2 px-3 hover:bg-gray-700 rounded"
					type="submit">Create TXT</button>
			</form>
		</div>
	</div>

</body>

